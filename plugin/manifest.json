{

  "manifest_version": 2,
  "name": "platter",
  "version": "1.0",

  "description": "Pick Elements to save them to your recipe",
  "homepage_url": "https://www.google.com",
  "icons": {
    "48": "icons/icon-48.png"
  },

  "permissions": [
    "activeTab",
	 "webRequest",
	 "storage",	
	 "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "icons/icon-32.png",
    "default_title": "Platter"
  },
  
  "background": {
		"scripts": ["background_scripts/background.js"]
	},
	
  "web_accessible_resources": [
	 "html/js/login_prompt.js",
	 "html/js/element_picker.js",
	 "html/js/utils.js",
    "html/element_picker.html",
	 "css/element_picker.css"
  ]

}